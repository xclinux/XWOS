    SHOW_RM = @
else
    SHOW_CPP =
    SHOW_CC =
    SHOW_APP =
    SHOW_AS =
    SHOW_OD =
    SHOW_CP =
    SHOW_MM =
    SHOW_AR =
    SHOW_LD =
    SHOW_MOT2BIN =
    SHOW_LUA2HEX =
    SHOW_RM =
endif
