                      export COLOR=$$[COLOR+1]; \
                      echo $${COLOR} > $(XWOS_COLOR_TMPFILE);)

    SHOW_LD = $(strip @COLOR=$$(cat $(XWOS_COLOR_TMPFILE)); \
                      if [ x$${COLOR} = x ]; then COLOR=0; \
                      elif [ $${COLOR} -gt 7 ]; then COLOR=0; fi; \
