CROSS_COMPILE ?= arm-none-eabi-
CC := $(CROSS_COMPILE)gcc
CXX := $(CROSS_COMPILE)g++
AS := $(CROSS_COMPILE)gcc -x assembler-with-cpp
OBJCP := $(CROSS_COMPILE)objcopy
OD := $(CROSS_COMPILE)objdump
AR := $(CROSS_COMPILE)ar
LD := $(CROSS_COMPILE)gcc
SIZE := $(CROSS_COMPILE)size
LUA2HEX := python3 xwbs/util/py/lua2hex.py
CP := cp
RM := -rm

ifeq ($(ARCHCFG_LITTLE_ENDIAN),y)
    ENDIAN := little-endian
else
    ENDIAN := big-endian
endif
~D ?= 1
WARN := -Wall -Wextra -Wundef -Wsign-conversion -Werror
INCDIRS = -I. \
          -I$(XWOS_ARCH_DIR) \
          -I$(XWOS_CPU_DIR) \
          -I$(XWOS_SOC_DIR) \
          -I$(XWOS_BRD_DIR) \
          -I$(XWOS_WKSPC_DIR)

PERDEF = -D__XuanWuOS__

AFLAGS = -mabi=aapcs -mno-thumb-interwork -m$(ENDIAN) -mthumb \
         -nostdinc -nostdlib -mno-unaligned-access \
         -ffunction-sections -fdata-sections \
         -gdwarf-4 -fvar-tracking-assignments \
         -Wa,-adhlns="$@.lst" $(WARN) $(PERDEF)

CFLAGS = -mabi=aapcs -mthumb -std=gnu11 \
         -fomit-frame-pointer -mno-thumb-interwork -m$(ENDIAN) \
         -mno-unaligned-access \
         -ffunction-sections -fdata-sections \
         -gdwarf-4 -fvar-tracking-assignments -fverbose-asm \
         -Wa,-adhlns="$@.lst" $(WARN) $(PERDEF)

CXXFLAGS = -mabi=aapcs -mthumb -std=gnu++17 \
           -fomit-frame-pointer -mno-thumb-interwork -m$(ENDIAN) \
           -mno-unaligned-access \
           -ffunction-sections -fdata-sections \
           -gdwarf-4 -fvar-tracking-assignments -fverbose-asm \
           -Wa,-adhlns="$@.lst" $(WARN) $(PERDEF)

MMFLAGS = -MM -MP

ifeq ($(~D),0)
    CFLAGS += -O2
else
    CFLAGS += -O0
endif

ifeq ($(ARCHCFG_COMPILER_CLIB),n)
    CFLAGS += -fno-builtin
endif

LDFLAGS = -mthumb -mabi=aapcs -m$(ENDIAN) \
          -L$(XWOS_SOC_DIR) -T$(XWOS_BRD_DIR)/$(XuanWuOS_CFG_LDSCRIPT) \
          -Wl,--gc-sections \
          -Wl,-Map=$(XWOS_WKSPC_DIR)/$(TARGET).map,--cref

include $(XWOS_ARCH_DIR)/arch.mk
include $(XWOS_CPU_DIR)/cpu.mk
include $(XWOS_SOC_DIR)/soc.mk
include $(XWOS_BDL_DIR)/bdl.mk
include $(XWOS_KN_DIR)/xwos.mk
include $(XWBS_UTIL_MK_XWMO)

# colorfully build
