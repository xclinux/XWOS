WKSPC ?= wkspc
TARGET ?= XuanWuOS

all: $(WKSPC) cfg dbgcfg
	$(MAKE) -C $(WKSPC) TARGET=$(TARGET)

$(WKSPC):
	@mkdir -p $@

cfg: $(WKSPC) $(WKSPC)/XuanWuOS.cfg

$(WKSPC)/XuanWuOS.cfg: cfg/*.h
	@../../xwbs/util/el/mkcfg.el --cfgdir=cfg --topdir=../.. --wkspc=$(WKSPC) -- $(@F)

pegdbserver:
	pegdbserver_console \
		-device=NXP_S32K1xx_S32K144F512M15 -startserver -singlesession \
		-serverport=7224 -gdbmiport=6224 -interface=OPENSDA -speed=5000 -port=USB1 \
		-configfile=cfg/dbg/config.ini

cmdap:
	openocd -f cfg/dbg/openocd/cmsis-dap.cfg


dbgcfg: cfg/dbg/pepgm.gdb cfg/dbg/openocd-dbg.gdb cfg/dbg/openocd-pgm.gdb

%.gdb: %.gdb.template
	@sed "s/##DIR##/$(subst /,\\/,$(shell pwd)/$(WKSPC))/g" $< > $@
	@chmod +x $@


pgm:
	@arm-none-eabi-gdb -x cfg/dbg/openocd-pgm.gdb

dbg:
	@arm-none-eabi-gdb -x cfg/dbg/openocd-dbg.gdb

c clean: cfg
	$(MAKE) -C $(WKSPC) TARGET=$(TARGET) NODEP=y clean

d distclean: cfg
	@rm -rf $(WKSPC)
	@rm -rf cfg/dbg/*.gdb

.DEFAULT:
	@$(MAKE) cfg
	$(MAKE) -C $(WKSPC) TARGET=$(TARGET) $@

.PHONY : all cfg dbgcfg c clean d distclean
